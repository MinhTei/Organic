{
  // Ensure Intelephense does NOT exclude vendor so composer packages are indexed
  "intelephense.files.exclude": [
    "**/.git/**",
    "**/node_modules/**",
    "**/storage/**"
  ],

  // If your global files.exclude hides vendor, explicitly include vendor for this workspace
  "files.exclude": {
    "**/vendor": false
  },

  // Ignore Tailwind CSS unknown at-rules warnings
  "css.lint.unknownAtRules": "ignore",
  "css.validate": true
}
